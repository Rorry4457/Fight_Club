<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_item"
    android:layout_width="56dp"
    android:layout_height="376dp"
    tools:background="@color/dark_green">


    <TextView
        android:id="@+id/left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/login_item_text_size"
        tools:layout_marginStart="-9dp"
        tools:text="F"
        tools:textColor="@color/dark_red" />

    <TextView
        android:id="@+id/right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/login_item_text_size"
        tools:layout_marginEnd="-9dp"
        tools:text="C"
        tools:textColor="@color/light_red" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:scaleType="center"
        android:src="@mipmap/drag_icon" />


</RelativeLayout>