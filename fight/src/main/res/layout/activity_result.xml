<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.auto.auto.ResultActivity">

    <TextView
        style="@style/ResultTextViewStyle"
        android:text="@string/current_account" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="36dp">

        <TextView
            android:id="@+id/dingTalkAccount"
            style="@style/ResultTextViewStyle"
            tools:text="12987312984" />

        <TextView
            android:id="@+id/authAccount"
            style="@style/ResultTextViewStyle"
            tools:text="chendssd" />

        <TextView
            android:id="@+id/eMail"
            style="@style/ResultTextViewStyle"
            tools:text="/@icloud.com" />

        <TextView
            android:id="@+id/version"
            style="@style/ResultTextViewStyle"
            tools:text="22324" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/openAccessibility"
            style="@style/ResultButtonStyle"
            android:text="@string/check_accessibility" />

        <Button
            android:id="@+id/reset"
            style="@style/ResultButtonStyle"
            android:text="@string/reset" />
    </LinearLayout>


</LinearLayout>
