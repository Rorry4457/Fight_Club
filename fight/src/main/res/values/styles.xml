<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="EidtTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>

    </style>

    <style name="FakeEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="LabelActive">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textStyle">@integer/font_textStyle_medium</item>-->
    </style>
    <style name="LabelInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>
    <style name="SubLabelActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9C9C9C</item>
    </style>
    <style name="SubLabelInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>
</resources>
